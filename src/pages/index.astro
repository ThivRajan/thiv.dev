---
import ContactsBar from '@components/ContactsBar/ContactsBar'
import Experience from '@components/Experience/Experience'
import Hero from '@components/Hero/Hero'
import Projects from '@components/Projects/Projects'
import './index.scss'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,100..900;1,100..900&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Slab:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
		<meta name="viewport" content="width=device-width" />
		<title>Thiv Rajan</title>
	</head>
	<body>
		<div
			class="bg-gray-700 h-screen min-h-full flex justify-center overflow-auto relative"
		>
			<div
				class="float-wrapper hidden lg:block fixed top-[50%] translate-y-[-50%] right-10"
			>
				<ContactsBar client:idle />
			</div>
			<div class="flex flex-col w-full h-max p-6 max-w-2xl gap-8">
				<Hero client:idle />
				<Projects />
				<Experience client:idle />
			</div>
		</div>
	</body>
</html>
